{
    "name": "ezfinances-server",
    "version": "1.0.0",
    "description": "server of ezfinances app",
    "main": "index.js",
    "author": "Marcos Kloss",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "dev": "ts-node-dev --transpile-only 'src/index.ts'",
        "start": "yarn build && node dist/src/index.js",
        "lint": "eslint ./src ./test --ext .ts",
        "lint:fix": "eslint ./src ./test --ext .ts --fix",
        "test": "yarn test:unit && yarn test:functional",
        "test:watch": "jest --watch --runInBand",
        "test:cov": "jest --no-cache --runInBand --coverage",
        "test:unit": "jest",
        "test:functional": "jest --projects ./test --runInBand",
        "pre-commit": "lint-staged"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/jest": "^27.0.1",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/module-alias": "^2.0.1",
        "@types/node": "^16.9.4",
        "@types/pino": "^6.3.11",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "eslint": "^7.32.0",
        "husky": "^7.0.2",
        "jest": "^27.2.0",
        "lint-staged": "^11.2.0",
        "prettier": "^2.4.1",
        "ts-jest": "^27.0.5",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/yup": "^0.29.13",
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "jsonwebtoken": "^8.5.1",
        "module-alias": "^2.2.2",
        "mongoose": "5.12.14",
        "pino": "^6.13.3",
        "pino-pretty": "^7.0.1",
        "yup": "^0.32.9"
    }
}
